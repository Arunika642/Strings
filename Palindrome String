public class EvenLength {
    public static void main(String[] args)
    {
        String s = "AbbA";
        char[] ch = s.toCharArray();
        int n = ch.length;
        for(int i=0; i<n/2;i++)
        {
            char temp = ch[i];
            ch[i] = ch[n-1-i];
            ch[n-1-i] = temp;
        }
        String str = new String(ch);
        System.out.println(str.equals(s));
    }
}

